package org.pvg.plasmagraph.utils.data;

import java.util.ArrayList;

import org.pvg.plasmagraph.utils.graphs.ChartType;

// TODO: Add JavaDoc comments to everything.
/**
 * 
 * @author Tako
 *
 */
public class DataSetRelations {
	/***/
	boolean pie;
	/***/
	private ArrayList<Pair> table;
	
	public DataSetRelations (boolean is_pie_graph) {
		pie = is_pie_graph;
		table = new ArrayList <Pair> ();
	}
	
	public boolean add (Pair p) {
		return (table.add(p));
	}

	public Pair remove (int index) {
		return (table.remove(index));
	}
	
	public boolean remove (Pair p) {
		return (table.remove(p));
	}
	
	public int find (Pair p) {
		return (table.indexOf(p));
	}
	
	/**
	 * 
	 * @author Tako
	 *
	 */
	class Pair {
		/***/
		private final int index1;
		/***/
		private final int index2;
		
		public Pair (int i, int j) {
			index1 = i;
			index2 = j;
		}
		
		public int getIndex1 () {
			return index1;
			
		}
		
		public int getIndex2 () {
			return index2;
			
		}
		
		@Override
		public String toString () {
			return ("" + index1 + ", " + index2);
		}
		
		@Override
		public boolean equals (Object obj) {
			// Same object?
			if (this == obj) { return (true); }
			
			// Not the same class?
			if (!(obj instanceof Pair )) { return (false); }
			Pair c = (Pair) obj;
			
			// Same name?
			if (!this.toString().equals(c.toString())) { return (false); }
			
			// Then they're the same type of Pair.
			return (true);
		}
		
	}
	
}